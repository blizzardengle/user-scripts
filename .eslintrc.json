{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "globals": {
        "UserScript": true
    },
    "rules": {
        "class-methods-use-this": "off",
        "comma-dangle": [
            "error",
            "never"
        ],
        "default-case": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": ["error", "unix"],
        "max-len": "off",
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-use-before-define": "off",
        "object-curly-newline": "off",
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ],
        "no-unused-vars": "warn"
    }
}